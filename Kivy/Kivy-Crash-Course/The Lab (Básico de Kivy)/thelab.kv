<WidgetsExample>:
    cols: 3
    ToggleButton:
        text: "OFF"
        size_hint: None, 1
        width: "100dp"
        on_state: root.on_toggle_button_state(self)
    Button:
        text: "Count"
        on_press: root.on_button_click()
        disabled: not root.state
    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1, .5, 1, 1
    Switch:
        id: slider_switch
        active: True
        on_active: root.on_switch_active(self)
        size_hint: None, 1
        width: "100dp"
    Slider:
        id: slider
        min: 0
        max: 100
        value: 50
        # on_value: root.on_slider_value(self)
        orientation: 'vertical'
        disabled: not slider_switch.active
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: str(int(slider.value))
            font_name: "fonts/Lcd.ttf"
            font_size: "80dp"
            color: 1, .5, 1, 1
        ProgressBar:
            max: 100
            value: slider.value
    TextInput:
        id: text_input
        size_hint: None, 1
        width: "100dp"
        multiline: False
        on_text_validate: root.validation(self)
    Label:
        text: root.text_input_str

